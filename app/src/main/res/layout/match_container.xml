<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <TextView
            android:id="@+id/teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="proba -proba"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/home_chance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teams"
            android:fontFamily="sans-serif"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/away_chance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/draw_chance"
            android:fontFamily="sans-serif"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/draw_chance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_chance"
            android:fontFamily="sans-serif"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/away_chance"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/my_guess_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:text="@string/edit_my_guess" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>